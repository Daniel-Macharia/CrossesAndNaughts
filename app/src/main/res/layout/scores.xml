<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Scores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Here are your High Scores"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:gravity="center"
        android:background="@color/cream"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tenGames"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textSize="24sp"
            android:textColor="@color/blue"
            android:gravity="center"
            android:padding="8dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/percentTen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:gravity="center"
                />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/seekTen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="8dp"
                app:trackThickness="24dp"
                app:indicatorColor="@color/green"
                app:trackColor="@color/cream"
                app:trackCornerRadius="4dp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
        android:id="@+id/twentyGames"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/blue"
        android:padding="8dp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/percentTwenty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:gravity="center"
                />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/seekTwenty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="8dp"
                app:trackThickness="24dp"
                app:indicatorColor="@color/green"
                app:trackColor="@color/cream"
                app:trackCornerRadius="4dp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/fiftyGames"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/blue"
            android:padding="8dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/percentFifty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:gravity="center"
                />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/seekFifty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="8dp"
                app:trackThickness="24dp"
                app:indicatorColor="@color/green"
                app:trackColor="@color/cream"
                app:trackCornerRadius="4dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>